<project name="relaxngtoxsd.build" default="build" basedir="." >
    <property name="schematron.rnc" location="${basedir}/iso-schematron.rnc"/>
    <property name="schematron.xsd" location="${basedir}/../xsd/schematron.xsd"/>
    <property name="trang.jar" location="${basedir}/trang.jar"/>

    <target name="build" description="create xsd from schematron relaxng">
        <java jar="${trang.jar}"
        	fork="true"
            >
          <arg value="${schematron.rnc}"/>
            <arg value="${schematron.xsd}"/>
        </java>
    </target>
</project>
